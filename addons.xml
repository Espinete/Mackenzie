<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.Mackenzie" name="Mackenzie" version="0.0.2" provider-name="Insomnia">
	<extension point="xbmc.addon.repository" name="Mackenzie">
		<info compressed="false">https://raw.githubusercontent.com/Espinete/Mackenzie/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Espinete/Mackenzie/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/Espinete/Mackenzie/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
        <summary lang="es">Mackenzie Repository</summary>
        <description lang="es">Installer Mackenzie</description>
        <summary lang="es">Mackenzie Repository</summary>
        <description lang="es">Download and install Mackenzie</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.module.chardet" name="chardet" version="4.0.0" provider-name="Character Encoding Detector">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">The Universal Character Encoding Detector</summary>
    <description lang="en_GB">The Universal Character Encoding Detector</description>
    <license>LGPL-2.1</license>
    <platform>all</platform>
    <website>https://chardet.readthedocs.io/en/latest/</website>
    <source>https://github.com/chardet/chardet</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

<addon id="script.module.idna" name="idna" version="2.10.0" provider-name="Kim Davies">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Internationalized Domain Names for Python</summary>
    <description lang="en_GB">Internationalized Domain Names for Python</description>
    <license>BSD-3-Clause</license>
    <platform>all</platform>
    <website>https://github.com/kjd/idna</website>
    <source>https://github.com/kjd/idna</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

<addon id="script.start-up"
       name="[B][COLOR lime]Start[/COLOR]-Up[/B]"
       version="1.0.0"
       provider-name="Team Open-source">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
		<summary lang="en">Disable startup services on Kodi and improving internal speed.</summary>
		<description lang="en"></description>
    </extension>
</addon>
</addons>
